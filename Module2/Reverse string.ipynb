     "output_type": "stream",
     "text": [
      "Enter string\n",
      "asdfghjk\n",
      "string length is a multiple of 4 so it is reversed :  kjhgfdsa\n"
     ]
    }
   ],
   "source": [
    "x=input(\"Enter string\\n\")\n",
    "y=len(x)\n",
    "z=x[::-1]\n",
    "if y%4==0:\n",
    "    print(\"string length is a multiple of 4 so it is reversed : \",z)\n",
    "else:print(\"String length is not multiple of 4\")\n"
   ]
  }
